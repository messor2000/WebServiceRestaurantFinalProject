<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
                     debug="false" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:schemaLocation="http://jakarta.apache.org/log4j/">

    <appender name="WebServiceRestaurant" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="${catalina.home}/logs/WebServiceRestaurant.log"/>
        <param name="Append"            value="true" />
        <param name="ImmediateFlush"    value="true" />
        <param name="MaxFileSize"       value="20MB" />
        <param name="MaxBackupIndex"    value="10" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-4r [%t] %-5p %c %x - %m%n" />
        </layout>
    </appender>

    <logger name="epam.task.finaltaskepam" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="WebServiceRestaurant"/>
    </logger>

    <root>
        <level value="debug" />
        <appender-ref ref="WebServiceRestaurant" />
    </root>

</log4j:configuration>

